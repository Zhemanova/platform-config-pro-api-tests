{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "types": ["jest", "node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/types/env.ts",
  ],
  "exclude": ["node_modules"]
}
